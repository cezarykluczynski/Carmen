<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="location" value="classpath:config.properties" />
  </bean>

  <bean id="myDataSource" class="org.apache.tomcat.dbcp.dbcp.BasicDataSource" destroy-method="close">
    <property name="driverClassName" value="${postgres.driverClassName}"/>
    <property name="url" value="${postgres.url}"/>
    <property name="username" value="${postgres.username}"/>
    <property name="password" value="${postgres.password}"/>
  </bean>

  <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
    <property name="dataSource" ref="myDataSource"/>
    <property name="packagesToScan" value="com.cezarykluczynski.carmen.model"/>
    <property name="configLocation">
      <value>classpath:hibernate.cfg.xml</value>
    </property>
    <property name="hibernateProperties">
      <value>
        org.hibernate.dialect.PostgreSQLDialect
      </value>
    </property>
  </bean>

  <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
    <property name="sessionFactory" ref="sessionFactory"/>
  </bean>

  <bean id="usersCarmenUserDAOImpl" class="com.cezarykluczynski.carmen.dao.users.CarmenUserDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <bean id="githubUserDAOImpl" class="com.cezarykluczynski.carmen.dao.github.UserDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <bean id="githubUserFollowersFolloweesLinker" class="com.cezarykluczynski.carmen.dao.github.UserDAOImplFollowersFolloweesLinkerDelegate">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <bean id="rateLimitDao" class="com.cezarykluczynski.carmen.dao.github.RateLimitDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <bean id="githubRepositoriesDAOImpl" class="com.cezarykluczynski.carmen.dao.github.RepositoriesDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <bean id="propagationsUserFollowersDao" class="com.cezarykluczynski.carmen.dao.propagations.UserFollowersDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <bean id="propagationsUserFollowingDao" class="com.cezarykluczynski.carmen.dao.propagations.UserFollowingDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <bean id="propagationsRepositoriesDAOImpl" class="com.cezarykluczynski.carmen.dao.propagations.RepositoriesDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <bean id="apiqueuePendingRequestDao" class="com.cezarykluczynski.carmen.dao.apiqueue.PendingRequestDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <bean id="followersAndFolloweesRepository" class="com.cezarykluczynski.carmen.repository.githubstats.FollowersAndFolloweesRepository" />
</beans>
